{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "linebreak-style": 0,
    "indent": [2, "tab"],
    "no-tabs": 0,
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "files": ["src/**/*.ts"]
  }
}
